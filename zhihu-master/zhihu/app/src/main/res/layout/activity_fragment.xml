<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.henu.zhihu.view.MyTitleView
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        ></com.henu.zhihu.view.MyTitleView>
    <com.henu.zhihu.view.MyViewPage
        android:id="@+id/view_page"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        ></com.henu.zhihu.view.MyViewPage>
       <View
           android:layout_width="match_parent"
           android:layout_height="5dp"
           android:background="@drawable/view_fade"

               />
      <com.henu.zhihu.view.TabBarView

          android:id="@+id/tab_bar_view"
          android:layout_width="match_parent"
          android:layout_height="60dp"></com.henu.zhihu.view.TabBarView>


</LinearLayout>