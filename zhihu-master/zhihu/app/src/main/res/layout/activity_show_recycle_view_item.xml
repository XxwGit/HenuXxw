<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_recycle_view_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.henu.zhihu.activity.ShowRecycleViewItemActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"

        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        >
       <ImageButton
           android:id="@+id/back_first"
           android:layout_weight="0.5"
           android:layout_width="0dp"
           android:layout_height="50dp"
           android:background="@color/white"
           android:src="@mipmap/close"/>

        <LinearLayout
            android:layout_weight="4.8"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="dasdas"
                android:id="@+id/back_title" />
        </LinearLayout>
        <ImageButton
            android:id="@+id/bake_share"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:src="@mipmap/share"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/divid"
        />
    <TextView
        android:padding="5dp"
        android:id="@+id/back_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxLines="15"
        android:text="asdasdas"
        android:textSize="15sp"
        android:textColor="@color/color_232323"
        />
</LinearLayout>
